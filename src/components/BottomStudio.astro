const {
  paragraph = `Siamo partner dei nostri clienti e amiamo accompagnarli con professionalità ed esperienza nelle sfide di ogni giorno, forti di una marcata vocazione internazionale e orgogliosi delle nostre origini e del nostro territorio.`,
  actionText = `SCOPRI I NOSTRI SERVIZI`,
  imageUrl = "/assets/bottomStudio.png",
  actionLink = "#",
  backgroundColor = "#f9f9f9", // Valore di default
} = Astro.props;
---

<section
  class="partner-section"
  style={`background-color: ${backgroundColor};`}
>
  <div class="partner-container">
    <!-- Colonna Immagine -->
    <div class="partner-image">
      <img src={imageUrl} alt="Partner image" />
    </div>

    <!-- Colonna Testo -->
    <div class="partner-content">
      <p>{paragraph}</p>
      <a href={actionLink} class="button">
        {actionText}
        <span class="button-icon">→</span>
      </a>
    </div>
  </div>
</section>

<style lang="scss">
  .partner-section {
    display: flex;
    justify-content: center;
    align-items: center;
    /* Rimosso background-color poiché gestito via stile inline */
    padding: var(--padding-viewport);
    padding-block: 7rem;
    @media (max-width: 768px) {
      padding-left: 0;
      padding-right: 0;
    }

    .partner-container {
      display: flex;
      gap: 8rem;
      align-items: center;
      width: 88%;
      justify-content: space-between;

      @media (max-width: 768px) {
        flex-direction: column;
        text-align: left;
        gap: 2rem;
      }
    }

    .partner-image {
      flex: 1;
      max-width: 50%;

      img {
        width: 100%;
        height: auto;
        object-fit: cover;
      }

      @media (max-width: 768px) {
        max-width: 100%;
      }
    }

    .partner-content {
      flex: 1;
      max-width: 50%;

      p {
        font-size: 1.2rem;
        line-height: 1.8;
        color: #4c4c4c;
        margin-bottom: 2rem;
      }

      .button {
        display: inline-flex;
        align-items: center;
        padding: 0.75rem 1.5rem;
        border: 2px solid #4c4c4c;
        border-radius: 50px;
        font-size: 1rem;
        color: #4c4c4c;
        text-decoration: none;
        transition: all 0.3s ease;
        @media (max-width: 768px) {
          align-self: flex-end;
        }

        &:hover {
          background-color: #4c4c4c;
          color: #fff;
        }

        .button-icon {
          margin-left: 0.5rem;
          transition: transform 0.3s ease;
        }

        &:hover .button-icon {
          transform: translateX(5px);
        }
      }

      @media (max-width: 768px) {
        max-width: 100%;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
      }
    }
  }
</style>
