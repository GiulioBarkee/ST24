      @media (max-width: 768px) {
        max-width: 100%;
        width: 100%;
      }

      h2 {
        font-size: 2.5rem; /* Dimensione del titolo */
        font-weight: 400;
        margin-bottom: 2rem;
        font-family: "Gambetta";
        color: #f9f9f9;
        @media (max-width: 768px) {
          font-weight: 300;
        }
      }

      p {
        font-size: 1.5rem; 
        margin-bottom: 2rem;
        white-space: pre-line;
        color: #e4e4e4;
        font-weight: 200;
        @media (max-width: 768px) {
          font-size: 1.3rem;
          line-height: 1.3;
          margin-bottom: 4rem;
        }
      }

      .button {
        // display: inline-flex;
        // align-items: center;
        // padding: 0.75rem 1.5rem;
        border: 2px solid var(--ST24-skyyellow);
