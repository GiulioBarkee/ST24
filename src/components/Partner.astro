        background-color: var(--ST24-skygreen);
        align-self: flex-start;
        @media (max-width: 768px) {
          align-self: flex-end;
        }

        &::before {
          background-color: var(--ST24-skyyellow);
        }

        &:hover {
          color: var(--ST24-skygreen);
        }

        &:hover .button-icon {
          transform: translateX(5px);
          filter: invert(0.8);
        }
      }
    }
  }

  /* Media query per dispositivi mobili */
  @media (max-width: 768px) {
    .partner-content {
      max-width: 90%;

