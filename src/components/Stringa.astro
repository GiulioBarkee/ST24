---
const {title} = Astro.props
---

<section>
  <div class="container-azure">
    <h3>{title}</h3>
  </div>
</section>

<style lang="scss">
  section {
        .container-azure {
      width: 100%;
      background-color: var(--ST24-skyazure);
      display: flex;
      padding: var(--padding-viewport);
      @media (min-width: 768px) {
        padding-bottom: 2rem;
      }
   
    
      h3 {
        font-size: var(--h2);
        color: var(--ST24-skygreen);
        font-weight: 500;
      }
  }
}
</style>
