            }
          }

          .service-name {
            font-size: 1.1rem;
            color: #333;
            text-transform: uppercase;
          }
        }
      }

      .button {
   
        @media (max-width: 768px) {
          align-self: flex-end;
        }

        &:hover {
          background-color: #243a3a;
          color: #fff;

          .button-icon {
            transform: translateX(5px);
          }
        }
      }
    }
  }

  /* Media query per dispositivi mobili */
  @media (max-width: 768px) {
    .left-column,
    .right-column {
      flex-direction: column;
    }

    .extra-info {
      gap: 0 !important;
    }
  }

  @media (max-width: 768px) {
    .grid {
      flex-direction: column; /* Dispone gli elementi in colonna */
      gap: 2rem; /* Spazio tra le colonne */
    }

    .left-column,
    .right-column {
      width: 100%; /* Ogni colonna occupa il 100% della larghezza */
    }
  }

  /* Imposta il contatore per la lista */
  .service-list {
    counter-reset: item; /* Inizializza il contatore per gli elementi della lista */
  }

  .button {
    width: fit-content;
    border: 1px solid var(--ST24-skygreen);
    color: var(--ST24-skygreen);
    &::before {
      background-color: var(--ST24-skygreen);
