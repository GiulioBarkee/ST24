---
const Scopri = `Scopri`;
const Sc1 = `Studio`;
const Sc2 = `Servizi`;
const Sc3 = `Journal`;
const Sc4 = `Circolari`;

const Social = `Social`;
const So1 = `Linkedin`;

const RimaniAggiornato = `Rimani aggiornato con le ultime
notizie dal mondo ST24`;
const action = `ISCRIVIMI ALLA NEWSLETTER`;
const Policy = `ST24 blablabla - blablabla - P.IVA 238476529348765 |`;
const Privacy = `Privacy policy`;
---

<footer class="footer">
  <div class="footer__columns">
    <div class="footer__column">
      <h4>{Scopri}</h4>
      <ul>
        <li><a href="#">{Sc1}</a></li>
        <li><a href="#">{Sc2}</a></li>
        <li><a href="#">{Sc3}</a></li>
        <li><a href="#">{Sc4}</a></li>
      </ul>
    </div>
    <div class="footer__column">
      <h4>{Social}</h4>
      <ul>
        <li><a href="#">{So1}</a></li>
      </ul>
    </div>
    <div class="footer__column newsletter">
      <h4>{RimaniAggiornato}</h4>
      <form class="footer__form">
        <input type="email" name="email" placeholder="Email" required />
        <button type="submit" class="button">
          {action}
          <img class="button-icon" src="/assets/arr-yellow.png" alt="" />
        </button>
      </form>
      <!-- Messaggio di successo o errore -->
      <p class="success-message2" style="display: none;">
        Iscrizione avvenuta con successo!
      </p>
      <p class="error-message2" style="display: none;">
        Si è verificato un errore. Riprovare.
      </p>
    </div>
  </div>
  <div class="footer__bottom">
    <a class="policy-footer" href="">{Policy}</a>
    <a class="policy-footer" href="">{Privacy}</a>
  </div>
</footer>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.querySelector(".footer__form");
    const successMessage = document.querySelector(".success-message2");
    const errorMessage = document.querySelector(".error-message2");

    if (form) {
      form.onsubmit = async (e) => {
        e.preventDefault(); // Impedisci il comportamento predefinito del form
        form.querySelector("button[type=submit]").disabled = true; // Disabilita il pulsante di invio

        const formData = new FormData(e.target);
        formData.append("senderName", "ST24 Newsletter");
        formData.append("senderEmail", "giuliobbarchi1@gmail.com"); // Email del mittente
        formData.append("to", "giulio@amedani.com"); // Email del destinatario

        try {
          const response = await fetch(
            "https://amedanistudio.pages.dev/api/form", // Endpoint API
            {
              method: "POST",
              body: formData,
            }
          );

          if (response.ok) {
            form.reset(); // Resetta il form dopo il successo
            successMessage.style.display = "block"; // Mostra il messaggio di successo
            errorMessage.style.display = "none"; // Nascondi il messaggio di errore
          } else {
            throw new Error("Form submission failed");
          }
        } catch (error) {
          console.error(error);
          errorMessage.style.display = "block"; // Mostra il messaggio di errore
          successMessage.style.display = "none"; // Nascondi il messaggio di successo
        } finally {
          form.querySelector("button[type=submit]").disabled = false; // Riabilita il pulsante di invio
        }
      };
    }
  });
</script>

